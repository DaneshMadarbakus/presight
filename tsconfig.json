{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // required for paths
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "skipLibCheck": true
  }
}
